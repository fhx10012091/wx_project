/* pages/book/book.wxss */
.container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.header{
  position: fixed;
  top: 0;
  width: 100%;
  height: 100rpx;
  background: #ffffff;
  border-top:1px solid #f5f5f5;
  border-bottom:1px solid #f5f5f5;
  display: flex;
  justify-content: center;
  box-shadow:0 0 3px 0 #e3e3e3; 
  z-index: 99;
  align-items: center;
}
.box{
  width: 700rpx;
  height: 34px;
  display: flex;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 100rpx;
  align-items: center;
  color:#999999;
}
.box image{
  margin-right:10px;
  width:14px;
  height:14px;
  margin-bottom:-2px;
}
.sub-container{
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
  align-items: center;
  margin-top:100rpx;
}
.head-img{
  width:106rpx;
  height:34rpx;
  margin-top:40rpx;
}

.books-container{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 0 90rpx 0 90rpx;
  justify-content: space-between;
  margin-top:10rpx;
}
v-book{
  margin-bottom: 30rpx;
}