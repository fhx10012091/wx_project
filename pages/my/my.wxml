<view class="container">
  <image src="/images/my/my@bg.png" class="bg"></image>
  <v-button 
    open-type="getUserInfo" 
    class="avatar-position"
    bind:getuserinfo="onGetUserInfo"
    wx:if="{{!authorize}}">
    <image 
    slot="img" 
    class="avatar" 
    src="/images/my/my.png" /> 
  </v-button>
  <view 
  class="avatar-container avatar-position" 
  wx:if="{{authorize}}">
    <image 
    src="{{userinfo.avatarUrl}}"  
    class="avatar" />
    <open-data  
    type="userNickName"></open-data>
  </view>
  <view class="about-container">
    <view 
    bind:tap="onJumpToAbout" 
    class="about-us">
      <image 
      src="/images/my/about.png" />
      <text 
      class="description">关于我们</text>
    </view>
    <view class="about-us">
      <text class="book-num">{{bookCount}}</text>
      <text class="description">喜欢的书</text>
    </view>
  </view>
  <view class="like-container">
    <image class="headline" src="/images/my/like.png" />
    <view class="preview-container">
      <block wx:for="{{classics}}" wx:key="{{item.id}}">
        <v-preview class="preview" classic="{{item}}" />
      </block>
    </view>
  </view>
  <!-- <button open-type="getUserInfo" bindgetuserinfo="getUserInfo">授权</button> -->
</view>