<wxs src="../../model/filter.wxs" module="util"/>
<view class="container">
  <view class="head">
    <image src="{{book.image}}"></image>
    <text class='title'>{{book.title}}</text>
    <text class='author'>{{book.author}}</text>
  </view>
   <view class="sub-container">
    <text class="headline">短评</text>
    <view class="comment-container">
      <block 
      wx:for="{{util.limit(comments, 10)}}" 
      wx:key="content">
        <v-tag text="{{item.content}}">
          <text class="num" slot="after">{{'+' + item.nums}}</text>
        </v-tag>
      </block>
    </view>
  </view>
  <view class="sub-container">
    <text class="headline">内容简介</text>
    <text class="content" decode="{{true}}">{{util.format(book.summary)}}</text>
  </view>
  <view class="sub-container">
    <text class="headline">书本信息</text>
    <view class="detail-contaner">
      <view class="vertical">
        <text class="description">出版社</text>
        <text class="description">出版年</text>
        <text class="description">页数</text>
        <text class="description">定价</text>
        <text class="description">装帧</text>
      </view>
      <view class="vertical">
        <text class="">{{book.publisher}}</text>
        <text class="">{{book.pubdate}}</text>
        <text class="">{{book.pages}}</text>
        <text class="">{{book.price}}</text>
        <text class="">{{book.binding}}</text>
      </view>
    </view>
  </view>
  <view class="post-container" wx:if="{{!posting}}">
    <view class="post-fake" bind:tap="onPost">
      <text>输入短评</text>
    </view>
    <view class="like-container">
      <v-like bind:like="onLike" class="like" like="{{likeStatus}}" count="{{likeCount}}" />
      <v-button open-type="share" class="share-btn">
        <image 
        class="share" 
        slot="img" 
        src="/images/icon/share.png" />
      </v-button>
    </view>
  </view>
</view>
<v-mask wx:if="{{posting}}"/>
<view class="posting-container" wx:if="{{posting}}">
  <view class="post-header">
    <text wx:if="{{comments==true}}">仅可点击标签+1</text>
    <text>暂无短评</text>
    <text class="cancel" bind:tap="onCancel">取消</text>
  </view>
  <view class="comment-container">
  <block 
      wx:for="{{util.limit(comments, 3)}}" 
      wx:key="content">
        <v-tag text="{{item.content}}" bind:onTagger="onTag">
          <text class="num" slot="after">{{'+' + item.nums}}</text>
        </v-tag>
      </block>
  </view>
  <input  class="post" placeholder='短评最多12个字' bindconfirm="onTag"></input>
</view>
